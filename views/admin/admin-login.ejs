<%- include('../head') %>

<body class="main-body">
    <main class="container">
        <h1 class="text-center">Logowanie do panelu admina</h1>
        <% if (locals.error) { %>
            <div class="alert alert-danger text-center" role="alert">
                <%= locals.error %>
            </div>
            <% } %>
                <form action="/admin/login" method="POST">
                    <div class="form-group">
                        <label for="emailInput">Adres email</label>
                        <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp"
                            placeholder="Wprowadź adres email" name="email" required="true">
                    </div>
                    <div class="form-group">
                        <label for="passwordinput">Hasło</label>
                        <input type="password" class="form-control" id="passwordinput" placeholder="Hasło"
                            name="password" required="true">
                    </div>
                    <button type="submit" class="btn btn-dark form-bttn">Zaloguj</button>
                </form>
    </main>
</body>

</html>