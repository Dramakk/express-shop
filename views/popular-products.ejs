<div class="container">
    <h1 class="text-center">Poznaj popularne produkty!</h1>
    
    <% var max_col = 4 %>
    <% var max_row = Math.floor(popular[0] / 4) %>
    <% for (var i = 0; i < max_row; i++ ) { %>
      <div class="row">
        <% for (var j = 0; j < max_col; j++ ) { %>
        <div class="col-sm">
          
          <a href="/products/<%=popular[1][i*max_col + j].id%>">
          <img src = "/images/<%= popular[1][i*max_col + j].picture %>.png">
          </a>
          <div> <h4 class="text-center"> <%= popular[1][i*max_col + j].itemname %> </h4></div>
          <div> <h4 class="text-center"> <%= popular[1][i*max_col + j].price / 100 %> z≈Ç </h4></div>
        </div>
        <% } %>
      </div>
      <% } %>

</div>